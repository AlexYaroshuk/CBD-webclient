{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*).(js|txt|ico|json)",
      "headers": { "cache-control": "public,max-age=0,must-revalidate" },
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": { "cache-control": "public,max-age=0,must-revalidate" }
    }
  ]
}
